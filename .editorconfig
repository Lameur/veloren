# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[{*.json,*.hcl}]
indent_size = 2

[*.yaml]
indent_size = 2
indent_style = space

[*.sh]
end_of_line = lf